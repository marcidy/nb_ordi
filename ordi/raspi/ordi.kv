#:kivy 1.0

# <FlaschenTaschenViewer>:

<OrdiBooth>:
    id: booth
    orientation: 'vertical'
    padding: "10dp"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Reset"
                on_press: ft.reset(booth)
            Button:
                text: "Import"
                on_press: ft.add_bottles(booth)
            Button:
                text: "Send to Flaschen Taschen"
                on_press: ft.show()
        BoxLayout:
            Button:
                text: "Your mom"
    BoxLayout:
        orientation: 'horizontal'
        size_hime: None, None
        BoxLayout:
            size_hint: None, None
        	FlaschenTaschenViewer:
                index: 1
                id: ft
        BoxLayout:
            size_hint: None, None
        	Image:
                source: root.source
